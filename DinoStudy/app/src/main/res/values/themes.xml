<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/customTextView</item>

        <item name="android:buttonStyle">@style/customButton</item>
    </style>
    <style name="customTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dunggeunmo</item>
    </style>

    <style name="customButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/dunggeunmo</item>
    </style>
</resources>